<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                        Craeción Activos
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>

                        <li class="breadcrumb-item active"><a href="@Url.Action("Index", "DepreciacionActivos")"> Activos</a></li>

                        <li class="breadcrumb-item active">Crear Activos</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="container-fluid">
        <!-- Default box -->
        <div class="card">

            <div class="card-body">
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.acvo_Nombre, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.acvo_Nombre, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.acvo_Nombre, new { htmlAttributes = new { @class = "form-control", @maxlength = "200" } })
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.acvo_NumeroSerie, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.acvo_NumeroSerie, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.acvo_NumeroSerie, new { htmlAttributes = new { @class = "form-control", @maxlength = "20" } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.viut_Id, "Vida Util", htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.viut_Id, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            <select id="viut_Id" name="viut_Id" class="form-control">
                            </select>
                        </div>


                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.clie_Id, "Clientes", htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.clie_Id, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            <select id="clie_Id" name="clie_Id" class="form-control">
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.acvo_Ubicacion, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.acvo_Ubicacion, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.acvo_Ubicacion, new { htmlAttributes = new { @class = "form-control", @maxlength = "150" } })
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.acvo_FechaAdquisicion, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.acvo_FechaAdquisicion, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.acvo_FechaAdquisicion, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            @Html.LabelFor(model => model.acvo_CostoOriginal, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.acvo_CostoOriginal, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.acvo_CostoOriginal, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-6 d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <div class="d-flex align-items-center">
                                    <span class="nav-link-icon">
                                        <span class="far fa-save"></span>
                                    </span>
                                    <div class="col-sm-1"></div>
                                    <span class="nav-link-text ps-1">Guardar</span>
                                </div>
                            </button>
                        </div>
                        <div class="col-sm-6 d-flex justify-content-center">
                            <a class="btn btn-default btn-sm" href="@Url.Action("Index", "DepreciacionActivos", null)">
                                <div class="d-flex align-items-center">
                                    <span class="nav-link-icon">
                                        <span class="fas fa-arrow-left"></span>
                                    </span>
                                    <div class="col-sm-1"></div>
                                    <span class="nav-link-text ps-1">Regresar</span>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>

</div>


<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "@Url.Action("GargarClientes", "DepreciacionActivos")",
            data: "{}",
            success: function (data) {
                var s = '<option value="-1">Por favor selecciona un cliente</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].clieId + '">' + data[i].clieNombre + ' - ' + data[i].clieCodigo + '</option>';
                }
                $("#clie_Id").html(s);
            }
        });

        $.ajax({
            type: "GET",
            url: "@Url.Action("CargarVidaUtil", "DepreciacionActivos")",
            data: "{}",
            success: function (data) {
                var s = '<option value="-1">Por favor selecciona una vcida Util</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].vidaid + '">' + data[i].des + ' - ' + data[i].year + 'años' + '</option>';
                }
                $("#viut_Id").html(s);
            }
        });

    });
</script>