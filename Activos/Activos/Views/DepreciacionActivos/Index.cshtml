<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                        Registro Activos
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>

                        <li class="breadcrumb-item active">Activos</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="container-fluid">
        <!-- Default box -->
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2">
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Create", "DepreciacionActivos", null)">
                            <div class="d-flex align-items-center">
                                <span class="nav-link-icon">
                                    <span class="fas fa-plus"></span>
                                </span>
                                <div class="col-sm-1"></div>
                                <span class="nav-link-text ps-1"><strong>Nuevo</strong></span>
                            </div>
                        </a>
                    </div>                  
                </div>
                <br>
                <br>
                <div class="table-responsive responsive-table scrollbar">
                    <table id="tbDepreciacion" class="table table-bordered is-striped" style="width:100%">
                        <thead>
                        <th style="width: 80px;">
                            Activo id
                        </th>
                        <th>
                            Nombre Activo
                        </th>
                        <th>
                            Fecha Adquisición
                        </th>
                        <th>
                            Costo Original
                        </th>
                        <th>
                            Activo bajado
                        </th>
                        
                        <th style="width:450px;">Acciones</th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.acvo_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.acvo_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.acvo_FechaAdquisicion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.acvo_CostoOriginal)
                                    </td>
                                    <td>
                                        @if (item.acvo_Estado.HasValue)
                                        {
                                            if (item.acvo_Estado.Value)
                                            {
                                                <p>No</p>
                                            }
                                            else
                                            {
                                                <p>Si</p>
                                            }
                                        }
                                        else
                                        {
                                            <p>Desconocido</p>
                                        }
                                    </td>
                                    <td>
                                        @if (item.acvo_Estado.HasValue)
                                        {
                                            if (item.acvo_Estado.Value)
                                            {
                                                <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "DepreciacionActivos", new { id = item.acvo_Id })">
                                                    <div class="d-flex align-items-center">
                                                        <span class="nav-link-icon">
                                                            <span class="fas fa-pencil-alt" style="color:white;"></span>
                                                        </span>
                                                        <div class="col-sm-1"></div>
                                                        <span class="nav-link-text ps-1" style="color:white;"><strong>Editar</strong></span>
                                                    </div>
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-warning btn-sm" onclick="EjecutarToast()">
                                                    <div class="d-flex align-items-center">
                                                        <span class="nav-link-icon">
                                                            <span class="fas fa-pencil-alt" style="color:white;"></span>
                                                        </span>
                                                        <div class="col-sm-1"></div>
                                                        <span class="nav-link-text ps-1" style="color:white;"><strong>Editar</strong></span>
                                                    </div>
                                                </a>
                                            }
                                        }
                                        else
                                        {
                                            <p>Desconocido</p>
                                        }
                                        

                                        <a class="btn btn-secondary  btn-sm" href="@Url.Action("Details", "DepreciacionActivos", new { id = item.acvo_Id })">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-icon">
                                                    <span class="far fa-list-alt"></span>
                                                </span>
                                                <div class="col-sm-1"></div>
                                                <span class="nav-link-text ps-1"><strong>Detalles</strong></span>
                                            </div>
                                        </a>

                                        <a class="btn btn-danger  btn-sm" data-toggle="modal" data-target="#modal-BajoActivo" onclick="CargarDataActivo(@item.acvo_Id)">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-icon">
                                                    <span class="far fa-trash-alt"></span>
                                                </span>
                                                <div class="col-sm-1"></div>
                                                <span class="nav-link-text ps-1"><strong>Bajar Activo</strong></span>
                                            </div>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
@Html.Partial("_BajarActivo")
<!-- DataTable Js-->
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="~/Content/js/Controladoresjs/toastr.js"></script>
<script src="~/Content/js/Controladoresjs/Depreciacion.js"></script>
<script>
    $(document).ready(function () {
        var depre1 = @Html.Raw(Json.Encode(Session["depreciacioneditada"]));
        var depre2 = @Html.Raw(Json.Encode(Session["depreciacionIngresada"]));
        var depre3 = localStorage.getItem("Activo");

        if (depre1 == "si") {
            MostrarMensajeSuccess("Depreciación editado con éxito");
            @(Session["depreciacioneditada"] = "no")
        }

        if (depre2 == "si") {
            MostrarMensajeSuccess("Depreciación ingresada con éxito");
            @(Session["depreciacionIngresada"] = "no")
        }

        if (depre3 == 1) {
            MostrarMensajeSuccess("Depreciación dada de baja con éxito");
            localStorage.setItem("Activo", 0);
        }

        $('#tbDepreciacion').DataTable();
    });


    $('#tbDepreciacion').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.2/i18n/es-MX.json'
        }
    });
</script>
