    <div class="container-fluid">
        <!-- Default box -->
        <div class="card">

            <div class="card-body">

                <form id="formReporte" action="@Url.Action("ExportarReporteFechas","DepreciacionActivos")" method="post">
                    <div class="form-row">
                        <div class="col-sm-3">
                            <label class="form-text">Cliente</label>
                            <select id="clie_Id" name="clie_Id" class="form-control"></select>
                        </div>
                        <div class="col-sm-3">
                            <label>Fecha Inicio</label>
                            <input type="date" name="fechainicio" class="form-control" />
                        </div>
                        <div class="col-sm-3">
                            <label>Fecha Fin</label>
                            <input type="date" name="fechafin" class="form-control" />
                        </div>
                        <div class="col-sm-3">
                            <label>&nbsp;</label>
                            <a class="btn btn-success btn-block" id="btnGuardar" onclick="Validar()">Descargar</a>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
