<script src="~/Content/js/Controladoresjs/toastr.js"></script>
<script>
    $(document).ready(function () {
        $('input[name="fechainicio"]').on('change', function () {
            var fechaInicio = new Date($(this).val());
            var fechaFin = new Date($('input[name="fechafin"]').val());

            if (fechaInicio > fechaFin) {
                MostrarMensajeWarning('La fecha de inicio no puede ser mayor a la fechas de fin');
                $("#btnGuardar").attr("disabled", "");
                $(this).val('');
            } else {
                $("#btnGuardar").removeAttr("disabled");
            }
        });

        // Cuando cambia el valor en el campo de fecha de fin
        $('input[name="fechafin"]').on('change', function () {
            var fechaInicio = new Date($('input[name="fechainicio"]').val());
            var fechaFin = new Date($(this).val());

            if (fechaInicio > fechaFin) {
                MostrarMensajeWarning('La fecha de fin no puede ser menor a la fechas de inicio');
                $("#btnGuardar").attr("disabled", "");
                $(this).val('');
            } else {
                $("#btnGuardar").removeAttr("disabled");
            }
        });




        $.ajax({
            type: "GET",
            url: "@Url.Action("GargarClientes", "DepreciacionActivos")",
            data: "{}",
            success: function (data) {
                var s = '<option value="-1">Por favor selecciona un cliente</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].clieId + '">' + data[i].clieNombre + ' - ' + data[i].clieCodigo + '</option>';
                }
                $("#clie_Id").html(s);
            }
        });

    });


    $('#clie_Id').change(function () {
        var clie_ID = $("#clie_Id").val();
        if (clie_ID == (-1).toString()) {
            $("#btnGuardar").attr("disabled", "");
            MostrarMensajeWarning('Por favor seleccione un cliente');
        } else {
            $("#btnGuardar").removeAttr("disabled");
        }
    });

    $("#clie_Id").focusout(function () {
        var clie_ID = $("#clie_Id").val();
        if (clie_ID == (-1).toString()) {
            $("#btnGuardar").attr("disabled", "");
            MostrarMensajeWarning('Por favor seleccione un cliente');
        } else {
            $("#btnGuardar").removeAttr("disabled");
        }
    });

    function Validar() {
        var fechaInicio = new Date($('input[name="fechainicio"]').val());
        var fechaFin = new Date($('input[name="fechafin"]').val());


        console.log(fechaInicio)
        console.log(fechaFin)
        if (!fechaInicio || isNaN(fechaInicio) || !fechaFin || isNaN(fechaFin)) {
            MostrarMensajeWarning('Debe seleccionar una fecha');
        } else {
             var clie_ID = $("#clie_Id").val();
        if (clie_ID == (-1).toString()) {
            MostrarMensajeWarning('Por favor seleccione un cliente');
        } else {
             var clie_ID = $("#clie_Id").val();
                $.ajax({
                    url: '@Url.Action("VerficarActivosTotales", "DepreciacionActivos")',
                    type: 'POST',
                    data: { clie_Id: clie_ID },
                    success: function (result) {
                        if (result.activoBajado == false) {
                            MostrarMensajeWarning("El cliente no tiene ningun activo");
                        }
                        if (result.activoBajado) {
                            // Aquí, dentro de la condición, es donde deberías enviar el formulario
                            $("#formReporte").submit();
                            setTimeout(() => {
                                MostrarMensajeSuccess("Reporte Generado exitosamente");
                            }, "500");
                        }
                    }
                });
            }
        }
    }


</script>