<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                        Registro Vidas Utiles
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>

                        <li class="breadcrumb-item active">Vida Util</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="container-fluid">
        <!-- Default box -->
        <div class="card">
            <div class="card-body">
                <a class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal-default">
                    <div class="d-flex align-items-center">
                        <span class="nav-link-icon">
                            <span class="fas fa-plus"></span>
                        </span>
                        <div class="col-sm-1"></div>
                        <span class="nav-link-text ps-1"><strong>Nuevo</strong></span>
                    </div>
                </a>
                <br>
                <br>
                <div class="table-responsive scrollbar">
                    <table id="tbVidaUtil" class="table table-bordered is-striped" style="width:100%">
                        <thead>
                        <th>
                            Vida util id
                        </th>
                        <th>
                            Objeto
                        </th>
                        <th>
                            Descripción
                        </th>
                        <th>
                            Años vida util
                        </th>
                        <th>
                            Acciones
                        </th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.viut_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.viut_Objeto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.viut_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.viut_VidaUtil)
                                    </td>

                                    <td>
                                        <a class="btn btn-warning btn-sm"  onclick="cargarDataEditar(@item.viut_Id)">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-icon">
                                                    <span class="fas fa-pencil-alt" style="color:white;"></span>
                                                </span>
                                                <div class="col-sm-1"></div>
                                                <span class="nav-link-text ps-1" style="color:white;"><strong>Editar</strong></span>
                                            </div>
                                        </a>

                                        <a class="btn btn-secondary btn-sm" href="@Url.Action("Details", "VidaUtil", new { id = item.viut_Id })">
                                            <div class="d-flex align-items-center">
                                                <span class="nav-link-icon">
                                                    <span class="far fa-list-alt"></span>
                                                </span>
                                                <div class="col-sm-1"></div>
                                                <span class="nav-link-text ps-1"><strong>Detalles</strong></span>
                                            </div>
                                        </a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
@Html.Partial("_Create")
@Html.Partial("_EditVida")
<!-- DataTable Js-->
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="~/Content/js/Controladoresjs/VidaUtil.js"></script>
<script src="~/Content/js/Controladoresjs/toastr.js"></script>
<script>
    $(document).ready(function () {

        if (localStorage.getItem("AgregarVida") == 1) {
            MostrarMensajeSuccess("Vida util agregada con exito");
            localStorage.setItem("AgregarVida", 0);
        }
        if (localStorage.getItem("EditarVida") == 1) {
            MostrarMensajeSuccess("Vida util editada con exito");
            localStorage.setItem("EditarVida", 0);
        }
        $('#tbVidaUtil').DataTable();
    });

    $('#tbVidaUtil').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.2/i18n/es-MX.json'
        }
    });
</script>
