        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                        Creación Clientes
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>

                        <li class="breadcrumb-item active"><a href="@Url.Action("Index", "Clientes")">Clientes</a></li>

                        <li class="breadcrumb-item active">Crear Cliente</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="container-fluid">
        <!-- Default box -->
        <div class="card">
            <div class="card-body">
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.clie_CodigoCompania, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.clie_CodigoCompania, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.clie_CodigoCompania, new { htmlAttributes = new { @class = "form-control", @maxlength = "200" } })
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.clie_NombreCliente, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.clie_NombreCliente, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.clie_NombreCliente, new { htmlAttributes = new { @class = "form-control", @maxlength = "200" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.clie_RTNCliente, htmlAttributes: new { @class = "control-label" })
                            <label style="color:red" id="lblError" hidden>Ya existe un cliente con este RTN</label>
                            @Html.ValidationMessageFor(model => model.clie_RTNCliente, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.clie_RTNCliente, new { htmlAttributes = new { @class = "form-control", @maxlength = "16" } })
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.clie_Lugar, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.clie_Lugar, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.clie_Lugar, new { htmlAttributes = new { @class = "form-control", @maxlength = "500" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.clie_Responsale, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.clie_Responsale, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.clie_Responsale, new { htmlAttributes = new { @class = "form-control", @maxlength = "200" } })
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.clie_Telefono, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.clie_Telefono, "", new { @class = "text-danger", @Style = "font-size: 14px;" })

                            @Html.EditorFor(model => model.clie_Telefono, new { htmlAttributes = new { @class = "form-control", @maxlength = "15" } })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-6 d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-sm" id="btnGuardar">
                                <div class="d-flex align-items-center">
                                    <span class="nav-link-icon">
                                        <span class="far fa-save"></span>
                                    </span>
                                    <div class="col-sm-1"></div>
                                    <span class="nav-link-text ps-1">Guardar</span>
                                </div>
                            </button>
                        </div>
                        <div class="col-sm-6 d-flex justify-content-center">
                            <a class="btn btn-default btn-sm" href="@Url.Action("Index", "Clientes", null)">
                                <div class="d-flex align-items-center">
                                    <span class="nav-link-icon">
                                        <span class="fas fa-arrow-left"></span>
                                    </span>
                                    <div class="col-sm-1"></div>
                                    <span class="nav-link-text ps-1">Regresar</span>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<script src="~/Content/js/Controladoresjs/Clientes.js"></script>

