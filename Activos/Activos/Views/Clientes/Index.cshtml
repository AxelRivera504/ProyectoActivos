<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                        Registro Clientes
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>

                        <li class="breadcrumb-item active">Clientes</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="container-fluid">
        <!-- Default box -->
        <div class="card">
            <div class="card-body">
                <a class="btn btn-primary  btn-sm" href="@Url.Action("Create", "Clientes", null)">
                    <div class="d-flex align-items-center">
                        <span class="nav-link-icon">
                            <span class="fas fa-plus"></span>
                        </span>
                        <div class="col-sm-1"></div>
                        <span class="nav-link-text ps-1"> <strong>Nuevo</strong></span>
                    </div>
                </a>
                <br>
                <br>
                <div class="table-container">
                    <table id="tbClientes" class="table table-bordered is-striped" style="width:100%">
                        <thead>
                        <th>
                            @Html.DisplayNameFor(model => model.clie_Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.clie_CodigoCompania)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.clie_NombreCliente)
                        </th>
                        <th style="width:100px;">
                            @Html.DisplayNameFor(model => model.clie_RTNCliente)
                        </th>
                        <th class="acciones-header">
                            Acciones
                        </th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.clie_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.clie_CodigoCompania)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.clie_NombreCliente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.clie_RTNCliente)
                                    </td>

                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Clientes", new { id = item.clie_Id })">
                                                <span class="fas fa-pencil-alt" style="color:white;"></span>
                                                <span class="nav-link-text ps-1" style="color:white;"><strong>Editar</strong></span>
                                            </a>
                                            <a class="btn btn-secondary btn-sm" href="@Url.Action("Details", "Clientes", new { id = item.clie_Id })">
                                                <span class="far fa-list-alt"></span>
                                                <strong>Detalles</strong>
                                            </a>
                                        </div>
                                        <div class="btn-group">
                                            <form id="formReporte" action="@Url.Action("ExportarExcel", "DepreciacionActivos")" method="post">
                                                <input type="hidden" id="clie_Id" name="clie_Id" value="" />
                                                <a class="btn btn-secondary btn-sm" onclick="Masiso(@item.clie_Id)">
                                                    <span class="far fa-list-alt"></span>
                                                    <strong>Activos Bajados</strong>
                                                </a>
                                            </form>
                                        </div>
                                        <div class="btn-group">
                                            <form id="formReporte" action="@Url.Action("ExportarExcelNoBajados", "DepreciacionActivos")" method="post">
                                                <input type="hidden" id="clie_Id" name="clie_Id" value="" />
                                                <a class="btn btn-secondary btn-sm" onclick="Masiso2(@item.clie_Id)">
                                                    <span class="far fa-list-alt"></span>
                                                    <strong>Activos no bajados</strong>
                                                </a>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>

</div>

<!-- DataTable Js-->
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="~/Content/js/Controladoresjs/toastr.js"></script>
<script>
    $(document).ready(function () {
        var clienteEditado = @Html.Raw(Json.Encode(Session["ClienteIngresado"]));
        var clienteIngresado = @Html.Raw(Json.Encode(Session["ClienteIngresado12"]));
        if (clienteEditado == "si") {
            MostrarMensajeSuccess("Cliente editado con éxito");
            // Limpia la variable de sesión para que el mensaje no se muestre de nuevo
            @(Session["ClienteIngresado"] = "no")
        }

        if (clienteIngresado == "si") {
            MostrarMensajeSuccess("Cliente ingresado con éxito");
            // Limpia la variable de sesión para que el mensaje no se muestre de nuevo
            @(Session["ClienteIngresado12"] = "no")
        }
    });

    $('#tbClientes').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.2/i18n/es-MX.json'
        }
    });

    function Masiso(id) {
        $.ajax({
            url: '@Url.Action("VerificarTieneActivoBajados", "DepreciacionActivos")',
            type: 'POST',
            data: { clie_Id: id },
            success: function (result) {
                if (result.activoBajado == false) {
                    MostrarMensajeWarning("El cliente no tiene activos bajados para poder generar el reporte");
                }
                if (result.activoBajado) {
                    console.log(id);

                    $("#clie_Id").val(id);

                    $("#formReporte").submit();
                    setTimeout(() => {
                        MostrarMensajeSuccess("Reporte Generado exitosamente");
                    }, "500");
                }
            }
        });
    }

     function Masiso2(id) {
        $.ajax({
            url: '@Url.Action("VerificarTieneMActivoNOBajados", "DepreciacionActivos")',
            type: 'POST',
            data: { clie_Id: id },
            success: function (result) {
                if (result.activoBajado == false) {
                    MostrarMensajeWarning("El cliente no tiene activos no bajados para poder generar el reporte");
                }
                if (result.activoBajado) {
                    console.log(id);

                    $("#clie_Id").val(id);

                    $("#formReporte").submit();
                    setTimeout(() => {
                        MostrarMensajeSuccess("Reporte Generado exitosamente");
                    }, "500");
                }
            }
        });
    }

</script>