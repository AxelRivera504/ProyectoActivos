<script>
    $(document).ready(function () {
        console.log("masiso");
        console.log("EDITAR:" + localStorage.getItem("Editar"))
        if (localStorage.getItem("Agregar") == 1) {
            MostrarMensajeSuccess("Usuario agregado con exito");
            localStorage.setItem("Agregar", 0);
        }
        if (localStorage.getItem("Editar") == 1) {
            console.log("Editado")
            MostrarMensajeSuccess("Usuario editado con exito");
            localStorage.setItem("Editar", 0);
        }
        if (localStorage.getItem("Habilitar") == 1) {
            MostrarMensajeSuccess("Usuario habilitado con exito");
            localStorage.setItem("Habilitar", 0);
        }
        if (localStorage.getItem("Deshabilitar") == 1) {
            MostrarMensajeSuccess("Usuario deshabilitado con exito");
            localStorage.setItem("Deshabilitar", 0);
        }
        $('#tbUsuarios').DataTable();
    });

    $('#tbUsuarios').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.2/i18n/es-MX.json'
        }
    });
</script>
