<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                        Registro Usuarios
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>

                        <li class="breadcrumb-item active">Usuarios</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <div class="container-fluid">
        <!-- Default box -->
        <div class="card">
            <div class="card-body">
                <a class="btn btn-primary  btn-sm" data-toggle="modal" data-target="#modal-default">
                    <div class="d-flex align-items-center">
                        <span class="nav-link-icon">
                            <span class="fas fa-plus">
                            </span>
                        </span>
                        <div class="col-sm-1"></div>
                        <span class="nav-link-text ps-1"> <strong>Nuevo</strong> </span>
                    </div>
                </a>             
                <br /><br />
                <div class="table-responsive scrollbar">
                    <table id="tbUsuarios" class="table table-bordered is-striped" style="width:100%">
                        <thead>
                        <th>
                            Id Usuario
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Apellido
                        </th>
                        <th>
                            Nombre Usuario
                        </th>
                        <th>
                            Habilitado
                        </th>
                        <th>
                            Acciones
                        </th>                  
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.usua_Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.usua_UsuarioNombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.usua_UsuarioApellido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.usua_Usuario)
                                </td>
                                <td>
                                    @if (item.usua_Estado.HasValue)
                                    {
                                        if (item.usua_Estado.Value)
                                        {
                                           <p>Si</p>
                                        }
                                        else
                                        {
                                           <p>No</p>
                                        }
                                    }
                                    else
                                    {
                                        <p>Desconocido</p>
                                    }
                                </td>

                                <td>
                                    <a class="btn btn-warning  btn-sm" onclick="cargarDataEditar(@item.usua_Id,@Session["usua_Id"])">
                                        <div class="d-flex align-items-center">
                                            <span class="nav-link-icon">
                                                <span class="fas fa-pencil-alt" style="color:white;"></span>
                                            </span>
                                            <div class="col-sm-1"></div>
                                            <span class="nav-link-text ps-1" style="color:white;"><strong>Editar</strong></span>
                                        </div>
                                    </a>
                                    <a class="btn btn-secondary  btn-sm" href="@Url.Action("Details", "Usuarios", new { id = item.usua_Id })">
                                        <div class="d-flex align-items-center">
                                            <span class="nav-link-icon">
                                                <span class="far fa-list-alt"></span>
                                            </span>
                                            <div class="col-sm-1"></div>
                                            <span class="nav-link-text ps-1"><strong>Detalles</strong></span>
                                        </div>
                                    </a>
                                    @if (item.usua_Estado.HasValue)
                                    {
                                        if (item.usua_Estado.Value)
                                        {
                                            <a class="btn btn-danger btn-sm" onclick="cargarData(@item.usua_Id,@Session["usua_Id"])">
                                                <div class="d-flex align-items-center">
                                                    <span class="nav-link-icon">
                                                        <span class="far fa-list-alt"></span>
                                                    </span>
                                                    <div class="col-sm-1"></div>
                                                    <span class="nav-link-text ps-1"><strong>Deshabilitar</strong></span>
                                                </div>
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-primary btn-sm" data-toggle="modal" onclick="cargarDataHabilitar(@item.usua_Id)" data-target="#modal-Enabled" style="width:120px">
                                                <div class="d-flex align-items-center">
                                                    <span class="nav-link-icon">
                                                        <span class="far fa-list-alt"></span>
                                                    </span>
                                                    <div class="col-sm-1"></div>
                                                    <span class="nav-link-text ps-1"><strong>Habilitar</strong></span>
                                                </div>
                                            </a>

                                        }
                                    }
                                </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>

</div>
